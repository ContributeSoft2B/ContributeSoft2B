
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TelegramLayout.cshtml";
}
<div class="row title--right"><div class="col-xs-12 text-right"><a href="~/Telegram" class="langchange">中文</a></div></div>
<div class="row">
    <div class="col-md-12 logo-wrap">
        <div class="logo-cont"><img src="~/images/token-logo.png" class="logo" />STB</div>
        <strong class="slogen">Global Software Asset First Chain</strong>
    </div>
    
    <div class="col-md-12 text--centered"><a href="https://t.me/soft2b" target="_blank" class="btn btn-alt">Global Software Asset First Chain</a></div>
    <div class="col-md-12 sometxt text--centered">For every friend you refer, get 2 STB for FREE from our Airdrop later!</div>
</div>
<div class="row e-address">
    
        <input type="hidden" value="@ViewBag.ParentId" name="parentId" class="parId" />
